@page "/graphicspage"
@using ClimateControlSystem.Client.PaginationNavigation
@using ClimateControlSystem.Client.Components
@using ClimateControlSystem.Client.Services.MicroclimateService
@inject IMicroclimateService MicroclimateService
@inject IConfigService ConfigService

<PageTitle>Graphics Page</PageTitle>

<h3>Графики прогнозов</h3>

<AuthorizeView>
    <Authorized>
        @if (_monitorings == null || _monitorings.Count == 0)
        {
            <p>
                <em>Загрузка...</em>
            </p>
        }
        else
        {
            <Line @ref="_temperatureChart" Data="_temperatureData" Config="_temperatureDataLineConfig"/>
            <Line @ref="_humidityChart" Data="_humidityData" Config="_humidityDataLineConfig"/>
            <Line @ref="_accuracyChart" Data="_accuracyData" Config="_accuracyLineConfig"/>

            <br/>

            <PaginationComponent RecordsCount=@_monitoringsRecordsCount
                                 RecordsPerPage=@RecordsPerPage
                                 PageChanged=@OnPageChanged/>

            <br/>
        }
    </Authorized>
    <NotAuthorized>
        Вы не вошли в систему
    </NotAuthorized>
</AuthorizeView>

@code{
    private const int RecordsPerPage = 15;
    private const int StartRecordsRequestCount = 0;

    private ConfigsDto _config;

    private List<MonitoringWithAccuracyDto> _monitorings;

    private Line _temperatureChart;
    private Line _humidityChart;
    private Line _accuracyChart;

    private LineConfig _temperatureDataLineConfig;
    private LineConfig _humidityDataLineConfig;
    private LineConfig _accuracyLineConfig;

    private List<GraphicData> _temperatureData;
    private List<GraphicData> _humidityData;
    private List<GraphicData> _accuracyData;

    private int _monitoringsRecordsCount;

    protected override async Task OnInitializedAsync()
    {
        _config = await ConfigService.GetConfigAsync();

        _monitoringsRecordsCount = await MicroclimateService.GetMonitoringsCount();

        _monitorings = await MicroclimateService.GetMonitoringsWithAccuraciesAsync(StartRecordsRequestCount, RecordsPerPage);

        await UpdateGraphics();
    }

    private async Task UpdateGraphics()
    {
        _temperatureData = AntChartHelper.GetTemperatureData(_monitorings, _config);
        _humidityData = AntChartHelper.GetHumidityData(_monitorings, _config);
        _accuracyData = AntChartHelper.GetAccuracyData(_monitorings);

        _temperatureDataLineConfig = AntChartHelper.GetTemperatureLineConfig(_temperatureData);
        _humidityDataLineConfig = AntChartHelper.GetHumidityLineConfig(_humidityData);
        _accuracyLineConfig = AntChartHelper.GetAccuracyConfig(_accuracyData);

        await _temperatureChart.ChangeData(_temperatureData);
        await _humidityChart.ChangeData(_humidityData);
        await _accuracyChart.ChangeData(_accuracyData);
    }

    private async Task OnPageChanged(RecordsRequest request)
    {
        _monitorings = await MicroclimateService.GetMonitoringsWithAccuraciesAsync(request.RecordsOffset, request.RecordsCount);

        await UpdateGraphics();
    }
}